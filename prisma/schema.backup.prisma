generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  supabaseId String?  @unique
  email      String   @unique
  name       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime? @updatedAt
  posts      Post[]  
  memos      Memo[] 
  todos      Todo[]   // 反向关系字段
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  userId    Int  // 外部キー
  user      User     @relation(fields: [userId], references: [id])
}

model Memo {
  id          Int   @id @default(autoincrement())
  title       String
  items       String?
  textContent String?
  images      String?  // この行を追加
  urls        String?  // この行を追加
  type        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId    Int  // 外部キー
  user      User     @relation(fields: [userId], references: [id])
}

model Todo {
  id          Int   @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  description String?  // 任意
  date        DateTime // カレンダー表示用日付
  time        DateTime? // ToDo予定時間（任意）
  datetime    DateTime? // 通知日時（任意）
  isDone      Boolean  @default(false)
  isRemind    Boolean  @default(false)
  remindTime  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
